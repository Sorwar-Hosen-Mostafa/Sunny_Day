<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sunny.sunnyday.Fragments.TrendingNowFragmet"

    >

    <FrameLayout
        android:layout_width="match_parent"
        android:padding="2dp"
        android:id="@+id/parentlayout"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/trending_now"
                    />
                <TextView
                    android:paddingLeft="10dp"
                    android:background="#55222222"
                    android:layout_width="290dp"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:gravity="center_vertical"
                    android:text="@string/trending_now_title"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="27dp" />
            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/trendingNowRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6.5"></android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </FrameLayout>

</layout>

