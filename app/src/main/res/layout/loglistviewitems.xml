<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="55"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/logDate_TV"
                android:padding="3dp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:text="21 july"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/logDay_TV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="sun"
                android:padding="3dp"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:padding="3dp"
                android:id="@+id/logTitle_TV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:textColor="@android:color/white"
                android:text="Period Starts"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/logSuggession_TV"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@android:color/white"
                android:layout_weight="2"
                android:text="Make reminder of emergency"
                android:textSize="9sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_weight="1"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                card_view:cardBackgroundColor="#ddffffff"
                android:layout_gravity="center"
                card_view:cardCornerRadius="25dp"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/logTitleSymble_TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="PS"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"></View>


</LinearLayout>